<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ceruleanotter.github.com.sunshine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ceruleanotter.github.com.sunshine.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ForecastTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ceruleanotter.github.com.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="ceruleanotter.github.com.sunshine.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceruleanotter.github.com.sunshine.MainActivity" />
        </activity>
        <activity
            android:name="ceruleanotter.github.com.sunshine.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="ceruleanotter.github.com.sunshine.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceruleanotter.github.com.sunshine.MainActivity" />
        </activity>

        <provider
            android:name="ceruleanotter.github.com.sunshine.data.WeatherProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <service android:name="ceruleanotter.github.com.sunshine.service.SunshineService" />

        <receiver
            android:name="ceruleanotter.github.com.sunshine.service.SunshineService$AlarmReceiver"
            android:enabled="true" />
    </application>

</manifest>